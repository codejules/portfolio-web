---
interface Props {
    date: string;
    company: string;
    title: string;
    description: string;
}

const { date, company, title, description } = Astro.props;
---

<div
    class="absolute w-3 h-3 bg-yellow-100 rounded-full mt-1.5 -start-1.5  dark:border-gray-900 dark:bg-gray-700"
>
</div>

<div>
    <h2 class="text-xl font-bold text-yellow-100 dark:text-white">
        {title}
    </h2>
    <h3 class="text-xl">{company}</h3>
    <time
        class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
        >{date}</time
    >
</div>
<div>
    <p class="text-pretty mb-4 text-base font-normal text-gray-200 dark:text-gray-400">
        {description}
    </p>
</div>
